{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GLM Usage Tray",
  "version": "0.1.0",
  "identifier": "com.glm-usage-tray.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GLM Usage Configuration",
        "label": "config",
        "width": 500,
        "height": 400,
        "resizable": false,
        "center": true,
        "visible": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "dmg", "app"],
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ]
  }
}
